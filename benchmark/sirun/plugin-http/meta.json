{
  "name": "plugin-http",
  "variants": {
    "client-control": {
      "setup": "bash -c \"nohup node server.js &\"",
      "run": "node client.js",
      "teardown": "bash -c \"kill -9 `cat server.pid`\"",
      "env": {
        "SET_PID": "server",
        "CLIENT_USE_TRACER": "0",
        "PORT": "3001" 
      }
    },
    "client-with-tracer": {
      "setup": "bash -c \"nohup node server.js &\"",
      "run": "node client.js",
      "teardown": "bash -c \"kill -9 `cat server.pid`\"",
      "env": {
        "SET_PID": "server",
        "CLIENT_USE_TRACER": "1",
        "PORT": "3002" 
      }
    },
    "server-control": {
      "setup": "bash -c \"sleep 2 && nohup node client.js &\"",
      "run": "node server.js",
      "teardown": "bash -c \"kill -9 `cat client.pid`\"",
      "env": {
        "SET_PID": "client",
        "SERVER_USE_TRACER": "0",
        "PORT": "3003" 
      }
    },
    "server-with-tracer": {
      "setup": "bash -c \"sleep 2 && nohup node client.js &\"",
      "run": "node server.js",
      "teardown": "bash -c \"kill -9 `cat client.pid`\"",
      "env": {
        "SET_PID": "client",
        "SERVER_USE_TRACER": "1",
        "PORT": "3004" 
      }
    }
  }
}
